                                {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                              {%- elsif shop.shipping_policy.body != blank -%}
                                {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
                              {%- else -%}
                                {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                              {%- endif -%}
                            </div>
                            {%- when 'rating' -%}
                              <div class="reviews__main">
                              <!--Insert reviews widget code here -->
                              <span class="shopify-product-reviews-badge" data-id="{{ product.id }}"></span>
                            </div>
                            {%- when 'variant_picker' -%}
                            {%- if block.settings.picker_type != 'button' -%}
                              {% assign label_position = 'horizantal' %}
                            {% endif %}
                            <div class="variant-picker" style="margin-top: {{ block.settings.margin_top }}px;">{% include 'product-options' %}</div>
                            {%- when 'quantity_picker' -%}
                            {% if block.settings.quantity_show %}
                              <div class="{% if label_position == 'horizantal' %}horizantal-position{% endif %}">
                                <label class="quantity_label" for="quantity-{{ block.id }}">{{ 'sections.cart.headings.quantity' | t }}</label>
