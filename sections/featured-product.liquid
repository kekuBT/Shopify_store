                                  <button class="quantity_box quantity__decrease">
                                    <span>-</span>
                                  </button>
                                  <div class="quantity_box quantity_num">
                                    <input
                                      id="quantity-{{ block.id }}"
                                      name="quantity"
                                      type="number"
                                      min="1"
                                      value="1" />
                                  </div>
                                  <button class="quantity_box quantity__increase">
                                    <span>+</span>
                                  </button>
                                </div>
                              </div>
