{{ 'section-featured-product.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{% style %}

  @media only screen and (min-width: 901px) {

    #shopify-section-{{ section.id }} .product-slider {
      order: {{ section.settings.image_position }};
    }

    #shopify-section-{{ section.id }}.form__btns.checkout_btn_first {
      display: flex;
    }

    #shopify-section-{{ section.id }}.form__btns.no-grid {
      flex-direction: column;
    }

    #shopify-section-{{ section.id }}.form__btns.checkout_btn_first .add-to-cart-btn {
      order: 1;
    }

  }
{% endstyle %}

{% assign label_position = 'vartical' %}
<div
  class="section featuredProduct-{{ section.id }} featured__row-main color-{{ section.settings.color_scheme }}"
  data-section-id="{{ section.id }}"
  data-section-type="featured-product"
  {{ section.shopify_attributes }}>
  <div class="slider-wrapper">
    <div class="page-width">
      {% if section.settings.heading != blank %}
        <h2 class="featured-section__title data-aos data-aos--fade-left data-aos--delay-200">{{ section.settings.heading }}</h2>
      {%- endif -%}

      <div
        class="featured__products_blocks"
        data-count="{{ section.blocks.size }}"
        id="FeaturedProductSlider-{{ section.id }}">
        {% assign product = all_products[section.settings.product] %}
        {% assign featured_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media %}
        {% assign first_3d_model = product.media | where: "media_type", "model" | first %}
        {% if product.id == blank %}
          {% assign product.id = '' %}
        {% endif %}
        <div id="ProductSection-{{ section.id }}"
          class="slideshow__slide is-fullwidth featuredProduct__slide--{{ section.id }}"
          data-block-id="{{ section.id }}"
          data-section-id="{{ section.id }}"
          data-section-type="product"
          {{ block.shopify_attributes }}>

          <!-- Variants inventory -->
          <div
            id="inventory-list-{{ section.id }}-{{ product.id }}"
            style="display:none"
            data-product-id="{{ product.id }}"
            data-has-only-default-variant="{{ product.has_only_default_variant }}">
            {%- for variant in product.variants -%}
              {%- capture options -%}
                {% for option in variant.options -%}
                  {{ option }}{%- unless forloop.last %}
                    /
                  {% endunless -%}
                {%- endfor %}
              {%- endcapture -%}
              <div
                class="inventory-list-variant"
                data-variant-title="{{ variant.title }}"
                data-variant-id="{{ variant.id }}"
                data-options="{{ options }}"
                data-options-size="{{ variant.options | size }}"
                data-product-size="{{ product.options | size }}"
                data-option1="{{ variant.option1 }}"
                data-option2="{{ variant.option2 }}"
                data-option3="{{ variant.option3 }}"
                data-availability="{{ variant.available }}"
                data-quantity="{{ variant.inventory_quantity }}"></div>
            {%- endfor -%}
          </div>
          <!-- Variants inventory -->

          <div class="slider-wrapper">
            <div class="featured__product mainProduct-{{ product.id }}" data-product-id="{{ product.id }}">
              <div class="iner_product_content" data-id="product_{{block.id}}">
                <div class="featured__product-inner columns is-align-items-start">
                  <div
                    {% if section.settings.thumbnail_position == 'below' %}
                    id="horizontal-product-slider"
                    {% else %}
                    id="vertical-product-slider"
                    {% endif %}
                    class="column is-three-fifths gallery-main product-slider {% if section.settings.navigation_style == 'circled-arrows' %}nav-style-circled-arrows{% endif %}">
                    <div data-product-images data-has-slideshow="{% if product.media.size > 1 %}true{% else %}false{% endif %}">
                      <div class="is-flex product__photos product__photos-{{ product.id }}">
                        {% if product.images.size > 0 %}
                          <div
                            id="ProductThumbs-{{ section.id }}"
                            class="left__nav product__thumbs {% if section.settings.hide_slider_nav %}hidden{% endif %}"
                            data-position="beside">
                            <div id="product-slider__nav" class="product-slider-nav object-fit--contain product__thumbs--scroller ">
                              {%- for media in product.media -%}
                                {% assign found_external_video_youtube = false %}
                                {% assign found_external_video_vimeo = false %}
                                {% assign found_model = false %}
                                {%- if media.media_type == "model" -%}
                                  <style>
                                    model-viewer {
                                      position: relative;
                                    }
                                    model-viewer:not(:defined) > :not(.poster) {
                                      display: none
                                    }
                                    model-viewer:defined > .poster > .pre-prompt {
                                      display: none
                                    }
                                    model-viewer .poster {
                                      display: flex;
                                      justify-content: center;
                                      align-items: center;
                                      height: 100%;
                                      top: 0;
                                      left: 0;
                                      background-size: contain;
                                      background-repeat: no-repeat;
                                      background-position: center
                                    }
                                    @keyframes wiggle {
                                      10%,
                                      12% {
                                        transform: translateX(-25px)
                                      }
                                      30%,
                                      32% {
                                        transform: translateX(25px)
                                      }
                                      0%,
                                      100%,
                                      45% {
                                        transform: translateX(0)
                                      }
                                    }
                                    @keyframes fade {
                                      40%,
                                      5% {
                                        opacity: 1
                                      }
                                      0%,
                                      100%,
                                      45% {
                                        opacity: 0
                                      }
                                    }
                                    model-viewer .pre-prompt {
                                      pointer-events: none;
                                      animation-name: wiggle, fade;
                                      animation-duration: 5s;
                                      animation-iteration-count: infinite;
                                      animation-timing-function: ease-in-out;
                                      width: 25px !important;
                                      height: 36px !important
                                    }
                                    model-viewer .progress-bar {
                                      display: block;
                                      width: 33%;
                                      height: 10%;
                                      max-height: 2%;
                                      position: absolute;
                                      left: 50%;
                                      top: 50%;
                                      transform: translate3d(-50%, -50%, 0);
                                      border-radius: 25px;
                                      box-shadow: 0 3px 10px 3px rgba(0, 0, 0, .5), 0 0 5px 1px rgba(0, 0, 0, .6);
                                      border: 1px solid rgba(255, 255, 255, .9);
                                      background-color: rgba(0, 0, 0, .5)
                                    }
                                    model-viewer .progress-bar.hide {
                                      visibility: hidden;
                                      transition: visibility 0.3s
                                    }
                                    model-viewer .update-bar {
                                      background-color: rgba(255, 255, 255, .9);
                                      width: 0;
                                      height: 100%;
                                      border-radius: 25px;
                                      float: left;
                                      transition: width 0.3s
                                    }
                                    model-viewer .ar-button {
                                      background-image: url('{{ "view-in-ar.png" | asset_url }}');
                                      background-color: #fff;
                                      background-repeat: no-repeat;
                                      background-size: 20px 20px;
                                      background-position: 12px 50%;
                                      position: absolute;
                                      left: 50%;
                                      transform: translateX(-50%);
                                      white-space: nowrap;
                                      bottom: 16px;
                                      padding: 0 16px 0 40px;
                                      font-family: Roboto Regular, Helvetica Neue, sans-serif;
                                      font-size: 14px;
                                      color: #4285f4;
                                      height: 36px;
                                      line-height: 36px;
                                      border-radius: 18px;
                                      border: 1px solid #dadce0
                                    }
                                    model-viewer .ar-button:active {
                                      background-color: #e8eaed
                                    }
                                    model-viewer .ar-button:focus {
                                      outline: 0
                                    }
                                    model-viewer .ar-button:focus-visible {
                                      outline: #4285f4 solid 1px
                                    }
                                    @keyframes circle {
                                      from {
                                        transform: translateX(-50%) rotate(0) translateX(50px) rotate(0)
                                      }
                                      to {
                                        transform: translateX(-50%) rotate(360deg) translateX(50px) rotate(-360deg)
                                      }
                                    }
                                    @keyframes elongate {
                                      from {
                                        transform: translateX(100px)
                                      }
                                      to {
                                        transform: translateX(-100px)
                                      }
                                    }
                                    model-viewer > .ar-prompt {
                                      position: absolute;
                                      left: 50%;
                                      bottom: 175px;
                                      animation: 2s ease-in-out infinite alternate elongate;
                                      display: none
                                    }
                                    model-viewer[ar-status=session-started] > .ar-prompt {
                                      display: block
                                    }
                                    model-viewer > .ar-prompt > img {
                                      animation: 4s linear infinite circle
                                    }
                                  </style>
                                  <script type="module">
                                    const body=document.body;let loaded=!1;const onInteraction=()=>{if(!0===loaded)return;loaded=!0;let e=document.createElement("script");e.type="module",e.src='{{ "model-viewer.min.js" | asset_url }}',body.appendChild(e)};body.addEventListener("mouseover",onInteraction,{once:!0}),body.addEventListener("touchmove",onInteraction,{once:!0}),body.addEventListener("scroll",onInteraction,{once:!0}),body.addEventListener("keydown",onInteraction,{once:!0});const onProgress=e=>{let t=e.target.querySelector(".progress-bar");e.target.querySelector(".update-bar").style.width=`${100*e.detail.totalProgress}%`,1==e.detail.totalProgress&&t.classList.add("hide")};document.querySelector("#model-viewer-{{ media.id }}").addEventListener("progress",onProgress);
                                  </script>
                                  {%- assign found_model = true -%}
                                {%- endif -%}
                                {%- if media.media_type == "external_video" and media.host == "youtube" and found_external_video_youtube == false -%}
                                  <link
                                    rel="stylesheet"
                                    href="{{ 'lite-youtube.css' | asset_url }}"
                                    media="print"
                                    onload="this.media='all'">
                                  <noscript>
                                    {{- 'lite-youtube.css' | asset_url | stylesheet_tag -}}
                                  </noscript>
                                  <script src="{{ 'lite-youtube.min.js' | asset_url }}" defer></script>
                                  {%- assign found_external_video_youtube = true -%}
                                {%- endif -%}
                                {%- if media.media_type == "external_video" and media.host == "vimeo" and found_external_video_vimeo == false -%}
                                  <style>
                                    .lite-vimeo-container {
                                      width: 100%;
                                      margin: auto;
                                      height: 100%;
                                      max-width: 100%;
                                      display: flex
                                    }
                                  </style>
                                  <script
                                    type="module"
                                    src="{{ 'lite-vimeo.js' | asset_url }}"
                                    defer></script>
                                  {%- assign found_external_video_vimeo = true -%}
                                {%- endif -%}
                                {% assign indx = forloop.index0 %}
                                <div
                                  class="product-galley---image product__thumb-item"
                                  data-alt="{{media.alt}}"
                                  data-index="{{ forloop.index0 }}">
                                  <div
                                    class="product__thumb product__thumb-{{ product.id }}"
                                    data-index="{{ forloop.index0 }}"
                                    data-id="{{ media.id }}">
                                    {% render "media", media: media, product: product, indexx: indx, thumbnail: true %}
                                  </div>
                                </div>
                              {%- endfor -%}
                            </div>
                          </div>
                          <div
                            class="zoom__image product__main-photos {% if section.settings.hide_slider_nav %}full-width{% endif %}"
                            data-position="beside"
                            data-product-single-media-group>
                            <div class="badges">
                              {% assign days = 7 %}
                              {% assign period_time = days | times: 24 | times: 60 | times: 60 %}
                              {% assign date_now = 'now' | date: '%s' %}
                              {% assign date_finished = product.published_at | date: '%s' | plus: period_time | date: '%s' %}
                              {%- for tag in product.tags -%}
                                {% assign tag = tag | downcase %}
                                {% if tag contains 'our pick' %}
                                  <div class="badge badge-pur-pick">{{ tag | capitalize }}</div>
                                {% elsif tag contains 'selling fast!' or tag contains 'Selling Fast!' %}
                                  <div class="badge badge-new">{{ tag | capitalize }}</div>
                                {% elsif tag contains 'new' or tag contains 'New' %}
                                  <div class="badge badge-new">{{ tag | capitalize }}</div>
                                {% endif %}
                              {%- endfor -%}
                            </div>
                            <div class="product-slider-main object-fit--contain product-slideshow" id="ProductPhotos-{{ section.id }}">
                              {%- for media in product.media -%}
                                {% assign indx = forloop.index0 %}
                                {%- liquid
                                                        assign is_featured = false
                                                        if featured_media == media
                                                          assign is_featured = true
                                                        endif
                                                    %}
                                <div class="zoom product-main-slide {% if is_featured %}starting-slide{% else %}secondary-slide{% endif %}" data-index="{{ forloop.index0 }}">
                                  <div class="product-image-main product-image-main--{{ product.id }} {{ media.media_type }}" {% if indx == 0 %}tabindex="0"{% else %}tabindex="-1"{% endif %}>
                                    {% render "media", media: media, product: product, indexx: indx %}
                                  </div>
                                </div>
                              {%- endfor -%}
                            </div>
                          </div>
                        {% else %}
                          <div class="is-fullwidth" id="ProductPhotos-{{ section.id }}">
                            <figure class="product-gallery--image-placeholder has-background-light">
                              <img src="{{ 'placeholder-product.svg' | asset_url }}" alt="Product placeholder" />
                            </figure>
                          </div>
                        {% endif %}
                      </div>
                    </div>

                  </div>
                  <div class="column is-two-fifths product__detail feature-product">

                    {% if product != empty %}
                      {%- form 'product', product, id: product.id, class: 'feature-product-form' -%}
                       <input
                          type="hidden"
                          name="id"
                          value="{{ product.selected_or_first_available_variant.id }}"
                        >
                        {%- for block in section.blocks -%}
                          {%- case block.type -%}
                            {%- when 'title' -%}
                            <a href="{{ product.url }}" class="product__title-link">
                              <h2 class="product__title">
                                {{ product.title | escape }}
                              </h2>
                            </a>
                            {%- when 'availability' -%}
                            <p
                              class="stock__quantity"
                              data-unavailable="{{ 'products.product.unavailable' | t }}"
                              data-in_stock="{{ 'products.product.in_stock' | t }}"
                              style="color: {{ block.settings.text_color }}">
                              {% if product.selected_or_first_available_variant.inventory_quantity > 0 or product.selected_or_first_available_variant.available %}
                                {{ 'products.product.in_stock' | t }}
                              {% else %}
                                {{ 'products.product.sold_out' | t }}
                              {% endif %}
                            </p>
                            {%- when 'price' -%}
                            <div class="price__box" id="price-{{ section.id }}">
                              {% render 'feature-price', product: product, price_class: 'feature_price' %}
