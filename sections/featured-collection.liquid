{% if settings.style == 'electronic' %}
  <div class="collectionSlider-{{ section.id }} main-featured-collection collection-slider--overflow featured-collection-{{ settings.style }}" data-section-id="{{ section.id }}" data-section-type="featured-collection">
    <div class="slider-wrapper">
      <div class="featured-collection section">
        <div class="collection-slider-wrapper">
          <div class="page-width">
              <div class="featured-collection-slider-header is-align-items-center">
                <div class="heading__content">
                  {% if section.settings.title != blank %}
                    <h2 class="data-aos data-aos--fade-left data-aos--delay-200">{{ section.settings.title | escape }}</h2>
                  {% endif %}
                  {% if section.settings.title != blank %}
                  <div class="collection-list-caption tes data-aos data-aos--fade-left data-aos--delay-300">{{ section.settings.caption }}</div>
                  {% endif %}
                </div>
                {%- if section.settings.view_all -%}
                <div class="has-text-centered button-wrapper top view_all_top">
                  <a href="{{ collection.url }}" class="button button--primary">
                    {{ section.settings.button_label }}
                    {% if settings.show_arrow %}<span class="btn-arrow">  
                      {% render 'btn-arrow' %}</span>
                    {% endif %}
                  </a>
                </div>
                {% endif %}
              </div>
              <div class="featured__collection-slider">
                {% render 'homepage-electronic-collection-slider' with section %}
              </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{%endif%}

