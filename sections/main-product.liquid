{{ 'product-main.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-rating.css' | asset_url | stylesheet_tag }}

{%- assign first_3d_model = product.media | where: "media_type", "model" | first -%}
{%- if first_3d_model -%}
  <link
    id="ModelViewerStyle"
    rel="stylesheet"
    href="https://cdn.shopify.com/shopifycloud/model-viewer-ui/assets/v1.0/model-viewer-ui.css"
    media="print"
    onload="this.media='all'"
  >
  <link
    id="ModelViewerOverride"
    rel="stylesheet"
    href="{{ 'component-model-viewer-ui.css' | asset_url }}"
    media="print"
    onload="this.media='all'"
  >
{%- endif -%}

{%- assign product_form_id = 'product-form-' | append: section.id -%}
{% assign featured_media = product.selected_or_first_available_variant.featured_media | default: product.featured_media %}

<div
  id="ProductSection-{{ product.id }}"
  data-block-id="{{ product.id }}"
  data-section-id="{{ product.id }}"
  data-section-type="product"
  {{ section.shopify_attributes }}
>
  <div class="slider-wrapper">
    <div class="page-width">
      <div class="main-product">
        <div class="main-product-wrapper" data-template="main-product-template">
          <div class="main__product">
            <div class="iner_product_content">
              <div class="main__product-inner columns is-align-items-start">
                <div
                  {% if section.settings.thumbnail_position == 'below' %}
                    id="horizontal-product-slider"
                  {% else %}
                    id="vertical-product-slider"
                  {% endif %}
                  class="column is-three-fifths gallery-main"
                >
                  <div class="is-flex product__photos product__photos-{{ product.id }}">
                    {% if product.images.size > 0 %}
                      <div
                        id="ProductThumbs-{{ product.id }}"
                        class="left__nav product__thumbs"
                        data-position="beside"
                      >
                        <div
                          id="product-slider__nav"
                          class="product-slider-nav object-fit--contain product__thumbs--scroller"
                        >
                          {% assign found_external_video_youtube = false %}
                          {% assign found_external_video_vimeo = false %}
                          {% assign found_model = false %}
                          {%- for media in product.media -%}
                            {%- if media.media_type == "model" -%}
                              <style>
                                model-viewer {position:relative;}model-viewer :not(:defined)>:not(.poster){display:none}model-viewer :defined>.poster>.pre-prompt{display:none}model-viewer .poster{display:flex;justify-content:center;align-items:center;height:100%;top:0;left:0;background-size:contain;background-repeat:no-repeat;background-position:center}@keyframes wiggle{10%,12%{transform:translateX(-25px)}30%,32%{transform:translateX(25px)}0%,100%,45%{transform:translateX(0)}}@keyframes fade{40%,5%{opacity:1}0%,100%,45%{opacity:0}}model-viewer .pre-prompt{pointer-events:none;animation-name:wiggle,fade;animation-duration:5s;animation-iteration-count:infinite;animation-timing-function:ease-in-out;width:25px!important;height:36px!important}model-viewer .progress-bar{display:block;width:33%;height:10%;max-height:2%;position:absolute;left:50%;top:50%;transform:translate3d(-50%,-50%,0);border-radius:25px;box-shadow:0 3px 10px 3px rgba(0,0,0,.5),0 0 5px 1px rgba(0,0,0,.6);border:1px solid rgba(255,255,255,.9);background-color:rgba(0,0,0,.5)}model-viewer .progress-bar.hide{visibility:hidden;transition:visibility .3s}model-viewer .update-bar{background-color:rgba(255,255,255,.9);width:0%;height:100%;border-radius:25px;float:left;transition:width .3s}model-viewer .ar-button{background-image:url('{{ "view-in-ar.png" | asset_url }}');background-color:#fff;background-repeat:no-repeat;background-size:20px 20px;background-position:12px 50%;position:absolute;left:50%;transform:translateX(-50%);white-space:nowrap;bottom:16px;padding:0 16px 0 40px;font-family:Roboto Regular,Helvetica Neue,sans-serif;font-size:14px;color:#4285f4;height:36px;line-height:36px;border-radius:18px;border:1px solid #dadce0}model-viewer .ar-button:active{background-color:#e8eaed}model-viewer .ar-button:focus{outline:0}model-viewer .ar-button:focus-visible{outline:#4285f4 solid 1px}@keyframes circle{from{transform:translateX(-50%) rotate(0) translateX(50px) rotate(0)}to{transform:translateX(-50%) rotate(360deg) translateX(50px) rotate(-360deg)}}@keyframes elongate{from{transform:translateX(100px)}to{transform:translateX(-100px)}}model-viewer>.ar-prompt{position:absolute;left:50%;bottom:175px;animation:2s ease-in-out infinite alternate elongate;display:none}model-viewer[ar-status=session-started]>.ar-prompt{display:block}model-viewer>.ar-prompt>img{animation:4s linear infinite circle}
                              </style>
                              <script type="module">
                                const body=document.body;let loaded=!1;const onInteraction=()=>{if(!0===loaded)return;loaded=!0;let a=document.createElement("script");a.type="module",a.src='{{ "model-viewer.min.js" | asset_url }}',body.appendChild(a);let b=document.createElement("script");b.src='{{ "focus-visible.min.js" | asset_url }}',body.appendChild(b)};body.addEventListener("mouseover",onInteraction,{once:!0}),body.addEventListener("touchmove",onInteraction,{once:!0}),body.addEventListener("scroll",onInteraction,{once:!0}),body.addEventListener("keydown",onInteraction,{once:!0});const onProgress=a=>{let b=a.target.querySelector(".progress-bar"),c=a.target.querySelector(".update-bar");c.style.width=`${100*a.detail.totalProgress}%`,1==a.detail.totalProgress&&b.classList.add("hide")};document.querySelector("#model-viewer-{{ media.id }}").addEventListener("progress",onProgress)
                              </script>
                              {%- assign found_model = true -%}
                            {%- endif -%}
                            {%- if media.media_type == "external_video" and media.host == "youtube" and found_external_video_youtube == false -%}
                              <link
                                rel="stylesheet"
                                href="{{ 'lite-youtube.css' | asset_url }}"
                                media="print"
                                onload="this.media='all'"
                              >
                              <noscript>
                                {{- 'lite-youtube.css' | asset_url | stylesheet_tag -}}
                              </noscript>
                              <script
                                src="{{ 'lite-youtube.min.js' | asset_url }}"
                                defer
                              >
                              </script>
                              {%- assign found_external_video_youtube = true -%}
                            {%- endif -%}
                            {%- if media.media_type == "external_video" and media.host == "vimeo" and found_external_video_vimeo == false -%}
                              <style>
                                .lite-vimeo-container{width:100%;margin:auto;height:100%;max-width:100%;display:flex}
                              </style>
                              <script
                                type="module"
                                src="{{ 'lite-vimeo.js' | asset_url }}"
                                defer
                              >
                              </script>
                              {%- assign found_external_video_vimeo = true -%}
                            {%- endif -%}
                            {% assign indx = forloop.index0 %}
                            <div
                              class="product-galley---image product__thumb-item"
                              data-alt="{{media.alt}}"
                              data-index="{{ forloop.index0 }}"
                            >
                              <div
                                class="product__thumb product__thumb-{{ product.id }} {% if product.media.size == 1 %}is-active{% endif %}"
                                data-index="{{ forloop.index0 }}"
                                data-id="{{ media.id }}"
                              >
                                {% render "media", media: media, product: product, indexx: indx, thumbnail: true %}
                              </div>
                            </div>
                          {%- endfor -%}
                        </div>
                      </div>
                      <div
                        class="zoom__image product__main-photos"
                        data-product-single-media-group
                      >
                        <div class="badges">
                          {% assign days = 7 %}
                          {% assign period_time = days | times: 24 | times: 60 | times: 60 %}
                          {% assign date_now = 'now' | date:'%s' %}
                          {% assign date_finished = product.published_at | date:'%s' | plus: period_time | date:'%s' %}
                          {%- for tag in product.tags -%}
                            {% assign tag = tag | downcase %}
                            {% if tag contains 'our pick' %}
                              <div class="badge badge-pur-pick">
                                {{ tag | capitalize }}
                              </div>
                            {% elsif tag contains 'selling fast!' or tag contains 'Selling Fast!' %}
                              <div class="badge badge-new">
                                {{ tag | capitalize }}
                              </div>
                            {% elsif tag contains 'new' or tag contains 'New' %}
                              <div class="badge badge-new">
                                {{ tag | capitalize }}
                              </div>
                            {% endif %}
                          {%- endfor -%}
                        </div>
                        <div
                          class="product-slider-main object-fit--contain product-slideshow"
                          id="ProductPhotos-{{ product.id }}"
                        >
                          {%- for media in product.media -%}
                            {% assign indx = forloop.index0 %}
                            {%- liquid
                              assign is_featured = false
                              if featured_media == media
                                assign is_featured = true
                              endif
                            %}
                            <div
                              class="zoom product-main-slide {% if is_featured %}starting-slide{% else %}secondary-slide{% endif %}"
                              data-index="{{ forloop.index0 }}"
                            >
                              <div class="product-image-main product-image-main--{{ product.id }} {{media.media_type}}">
                                {% render "media", media: media, product: product, indexx: indx %}
                              </div>
                            </div>
                          {%- endfor -%}
                        </div>
                      </div>
                    {% else %}
                      <div class="is-fullwidth">
                        <figure class="product-gallery--image-placeholder">
                          {% unless onboarding %}
                            {{ 'product-1' | placeholder_svg_tag: 'has-background-light' }}
                          {% else %}
                            {{ 'product-1' | placeholder_svg_tag: 'has-background-light' }}
                          {% endunless %}
                        </figure>
                      </div>
                    {% endif %}
                  </div>
                </div>
                <div class="column is-two-fifths product__detail">
                  <!-- Variants inventory helper -->
                  <div class="js-variants-inventory" style="display:none" data-product-id="{{ product.id }}" data-has-only-default-variant="{{ product.has_only_default_variant }}">
                    {%- for variant in product.variants -%}
                      {%- capture options -%}
                        {% for option in variant.options -%}
                          {{ option }}{%- unless forloop.last %} / {% endunless -%}
                        {%- endfor %}
                      {%- endcapture -%}
                      <div
                        class="inventory-list-variant"
                        data-variant-title="{{ variant.title }}"
                        data-variant-id="{{ variant.id }}"
                        data-options="{{ options }}"
                        data-options-size="{{ variant.options | size }}"
                        data-product-size="{{ product.options | size }}"
                        data-option1="{{ variant.option1 }}"
                        data-option2="{{ variant.option2 }}"
                        data-option3="{{ variant.option3 }}"
                        data-availability="{{ variant.available }}"
                        data-quantity="{{ variant.inventory_quantity }}"
                      >
                      </div>
                    {%- endfor -%}
                  </div>
                  <!-- Variants inventory helper -->
                  {%- for block in section.blocks -%}
                    {%- case block.type -%}
                      {%- when '@app' -%}
                        {% render block %}
                      {%- when 'title' -%}
                        <h2
                          class="product__title"
                          {{ block.shopify_attributes }}
                        >
                          {% if product != empty %}
                            {{ product.title | escape }}
                          {% else %}
                            {{ 'onboarding.product_title' | t }}
                          {% endif %}
                        </h2>
                  {% render 'judgeme_widgets', widget_type: 'judgeme_preview_badge', jm_style: '', concierge_install: true, product: product %}
                      {%- when 'availability' -%}
                        <p
                          class="stock__quantity"
                          data-unavailable="{{ 'products.product.unavailable' | t }}"
                          data-in_stock="{{ 'products.product.in_stock' | t }}"
                          {{ block.shopify_attributes }}
                        >
                          {% if product.selected_or_first_available_variant.available or product.selected_or_first_available_variant.inventory_quantity > 0 %}
                            {{ 'products.product.in_stock' | t }}
                          {% else %}
                            {{ 'products.product.sold_out' | t }}
                          {% endif %}
                        </p>
                      {%- when 'price' -%}
                        <div class="price__box" id="price-{{ section.id }}" {{ block.shopify_attributes }}>
                          {% render 'feature-price', product: product, price_class: 'feature_price' %}
                        </div>

                        <div class="product__tax caption rte">
                          {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                            {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
                          {%- elsif cart.taxes_included -%}
                            {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                          {%- elsif shop.shipping_policy.body != blank -%}
                            {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
                          {%- else -%}
                            {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                          {%- endif -%}
                        </div>
                      {%- when 'rating' -%}
                        <div
                          class="spr-starrating"
                          {{ block.shopify_attributes }}
                        >
                          {%- if product.metafields.reviews.rating.value != blank -%}
                            {% liquid
                              assign rating_decimal = 0
                              assign decimal = product.metafields.reviews.rating.value.rating | modulo: 1
                              if decimal >= 0.3 and decimal <= 0.7
                              assign rating_decimal = 0.5
                              elsif decimal > 0.7
                              assign rating_decimal = 1
                              endif
                            %}
                            <div
                              class="rating"
                              role="img"
                              aria-label="{{ 'accessibility.star_reviews_info' | t: rating_value: product.metafields.reviews.rating.value, rating_max: product.metafields.reviews.rating.value.scale_max }}"
                            >
                              <span
                                aria-hidden="true"
                                class="rating-star"
                                style="--rating: {{ product.metafields.reviews.rating.value.rating | floor }}; --rating-max: {{ product.metafields.reviews.rating.value.scale_max }}; --rating-decimal: {{ rating_decimal }};"
                              ></span>
                            </div>
                            <p class="rating-text caption">
                              <span aria-hidden="true">
                                {{- product.metafields.reviews.rating.value }} /
                                {{ product.metafields.reviews.rating.value.scale_max -}}
                              </span>
                            </p>
                            <p class="rating-count caption">
                              <span aria-hidden="true"
                                >(
                                {{- product.metafields.reviews.rating_count -}}
                                )</span
                              >
                              <span class="screen-reader-only">
                                {{- product.metafields.reviews.rating_count }}
                                {{ "accessibility.total_reviews" | t -}}
                              </span>
                            </p>
                          {%- endif -%}
                        </div>
                      {%- when 'quantity_picker' -%}
                        {% if block.settings.quantity_show %}
                          {% assign already_run = 'false' %}
                          {% if already_run == 'false' %}
                            <label
                              class="quantity_label"
                              for="quantity"
                              {{ block.shopify_attributes }}
                            >
                              {{- 'sections.cart.headings.quantity' | t -}}
                            </label>
                            <quantity-input class="quantity__main">
                              <button class="quantity_box quantity__decrease" name="minus" type="button">
                                <span>-</span>
                              </button>
                              <div class="quantity_box quantity_num">
                                <input
                                  id="quantity"
                                  name="quantity"
                                  type="number"
                                  min="1"
                                  value="1"
                                >
                              </div>
                              <button class="quantity_box quantity__increase" name="plus" type="button">
                                <span>+</span>
                              </button>
                            </quantity-input>
                            {% assign already_run = 'true' %}
                          {% endif %}
                        {% endif %}
                      {%- when 'variant_picker' -%}
                        {% if product != empty %}
                          {%- unless product.has_only_default_variant -%}
                            {%- if block.settings.picker_type == 'button' -%}
                              <variant-radios
                                class="no-js-hidden"
                                data-section="{{ section.id }}"
                                data-url="{{ product.url }}"
                                {{ block.shopify_attributes }}
                              >
                                {%- for option in product.options_with_values -%}
                                  {% assign loop_index = forloop.index0 %}
                                  {% assign color_not = false %}
                                  {% unless product.options contains 'Colour' or product.options contains 'colour' or product.options contains 'Color' or product.options contains 'color' or loop_index != 0 %}
                                    {% assign color_not = true %}
                                  {% endunless %}

                                  {% assign option_small = option.name | downcase %}
                                  {% if option_small == 'color' or option_small == 'colour' %}
                                    <fieldset
                                      class="js product-form__inpt"
                                      data-option-index="{{ forloop.index0 }}"
                                      data-index="{{ option.name }}{{ forloop.index0 }}"
                                      data_options="{{ option.name }}"
                                    >
                                      <label
                                        class="variant__label"
                                        for="ProductSelect-option-0"
                                      >
                                        {{- option.name }}
                                        <span class="variant__label-info"
                                          >:
                                          <span>
                                            {{- option.selected_value -}}
                                          </span>
                                        </span>
                                      </label>
                                      <div class="variant-input-main">
                                        {%- for value in option.values -%}
                                          {% assign option_image = nil %}
                                          {% assign variant_id = nil %}

                                          {% for variant in product.variants %}
                                            {% if variant.title contains value %}
                                              {% assign option_image = variant.image.id %}
                                              {% assign variant_id = variant.id %}
                                            {% endif %}
                                          {% endfor %}

                                          <div
                                            class="variant-input option-swatch"
                                            data-index="{{ option.name }}{{ forloop.index0 }}"
                                            data-option-index="{{ option.position }}"
                                            data-value="{{ value | escape }}"
                                            option-image="{{option_image}}"
                                            data-option-name="{{option.name | upcase}}"
                                            data-option-position="{{ forloop.index0 }}"
                                            data-variant-id="{{ variant_id }}"
                                          >
                                            <input
                                              type="radio"
                                              form="product-form-{{ section.id }}"
                                              value="{{ value | escape }}"
                                              name="{{ option.name }}"
                                              class=" variant__input--color-swatch"
                                              id="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                                              {% if option.selected_value == value %}
                                                checked
                                              {% endif %}
                                            >

                                            {%- assign downcase_filter_label = value | downcase -%}

                                            {%- if settings.color_swatch_config contains value -%}
                                              {%- assign color_swatch_config = settings.color_swatch_config | newline_to_br | split: '<br />' -%}
                                              <label
                                                for="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                                                class="variant__button-label  {% if option.selected_value == value %}selected{% endif %}"
                                                value="{{ value | escape }}"
                                                style="{% render 'color-swatch-style', color_swatch_config: color_swatch_config, value: value %}"
                                              >
                                                {{- value | escape -}}
                                              </label>
                                              {% else %}

                                              {%- assign image_name = value| replace :" ",'-'| replace :"/",'-' | downcase | append: '.png' -%}
                                              <label
                                                for="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                                                class="variant__button-label  {% if option.selected_value == value %}selected{% endif %}"
                                                value="{{ value | escape }}"
                                                style="--option-color: {{ value | downcase }}"
                                              >
                                                {{- value | escape -}}
                                              </label>
                                            {% endif %}

                                            <div
                                              class="inventory_update"
                                              style="display:none"
                                              {{ value }}
                                            >
                                              {% for vant in product.variants %}
                                                {% assign lwecase = value | escape %}
                                                {% if vant.title contains lwecase %}
                                                  <div
                                                    class="quantity"
                                                    availablitity="{{vant.available}}"
                                                    quantity="{{vant.inventory_quantity }}"
                                                  >
                                                    {{ vant.title }}
                                                  </div>
                                                {% endif %}
                                              {% endfor %}
                                            </div>
                                          </div>
                                        {%- endfor -%}
                                      </div>
                                    </fieldset>
                                  {% else %}
                                    <fieldset
                                      class="js product-form__inpt"
                                      data-option-index="{{ forloop.index0 }}"
                                      data_options="{{ option.name }}"
                                    >
                                      <label class="variant__label variant__size">
                                        {{- option.name }}
                                        <span class="variant__label-info"
                                          >:
                                          <span>
                                            {{- option.selected_value -}}
                                          </span>
                                        </span>
                                      </label>
                                      <div class="size__main{% if color_not %} variant-input-main{% endif %}">
                                        {%- for value in option.values -%}
                                          {% assign option_image = nil %}
                                          {% assign variant_id = nil %}
                                          {% for variant in product.variants %}
                                            {% if variant.title contains value %}
                                              {% assign option_image = variant.image.id %}
                                              {% assign variant_id = variant.id %}
                                            {% endif %}
                                          {% endfor %}

                                          <div
                                            class="quantity_box quantity_num option-swatch"
                                            data-index="{{ option.name }}{{ forloop.index0 }}"
                                            data-option-index="{{ option.position }}"
                                            option-image="{{option_image}}"
                                            data-value="{{ value | escape }}"
                                            data-option-name="{{option.name | upcase}}"
                                            data-option-position="{{ forloop.index0 }}"
                                            data-variant-id="{{ variant_id }}"
                                          >
                                            <input
                                              type="radio"
                                              id="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                                              name="{{ option.name }}"
                                              value="{{ value | escape }}"
                                              form="product-form-{{ section.id }}"
                                              {% if option.selected_value == value %}
                                                checked
                                              {% endif %}
                                            >
                                            <label
                                              for="{{ section.id }}-{{ option.name }}-{{ forloop.index0 }}"
                                              name="{{ option.name }}"
                                              value="{{ value | escape }}"
                                              class="{% if option.selected_value == value %}selected{% endif %}"
                                            >
                                              {{ value }}
                                            </label>
                                            {% if color_not %}
                                              <div
                                                class="inventory_update"
                                                style="display:none"
                                                {{ value }}
                                              >
                                                {% for vant in product.variants %}
                                                  {% assign lwecase = value | escape %}
                                                  {% if vant.title contains lwecase %}
                                                    <div
                                                      class="quantity"
                                                      availablitity="{{vant.available}}"
                                                      quantity="{{vant.inventory_quantity }}"
                                                    >
                                                      {{ vant.title }}
                                                    </div>
                                                  {% endif %}
                                                {% endfor %}
                                              </div>
                                            {% endif %}
                                          </div>
                                        {%- endfor -%}
                                      </div>
                                    </fieldset>
                                  {% endif %}
                                {%- endfor -%}

                                <script type="application/json">
                                  {{ product.variants | json }}
                                </script>
                              </variant-radios>
                            {%- else -%}
                              <variant-selects
                                class="no-js-hidden"
                                data-section="{{ section.id }}"
                                data-url="{{ product.url }}"
                                {{ block.shopify_attributes }}
                              >
                                {%- for option in product.options_with_values -%}
                                  <div class="product-form__inpt product-form__input--dropdown">
                                    <label
                                      class="form__label"
                                      for="Option-{{ section.id }}-{{ forloop.index0 }}"
                                    >
                                      {{ option.name }}
                                    </label>
                                    <div class="select">
                                      <select
                                        id="Option-{{ section.id }}-{{ forloop.index0 }}"
                                        class="select__select"
                                        name="options[{{ option.name | escape }}]"
                                        form="product-form-{{ section.id }}"
                                      >
                                        {%- for value in option.values -%}
                                          <option
                                            value="{{ value | escape }}"
                                            {% if option.selected_value == value %}
                                              selected="selected"
                                            {% endif %}
                                          >
                                            {{ value }}
                                          </option>
                                        {%- endfor -%}
                                      </select>
                                      {% render 'icon-caret' %}
                                    </div>
                                  </div>
                                {%- endfor -%}

                                <script type="application/json">
                                  {{ product.variants | json }}
                                </script>
                              </variant-selects>
                            {%- endif -%}
                          {%- endunless -%}
                          <noscript>
                            <div class="product-form__input{% if product.has_only_default_variant %} hidden{% endif %}">
                              <label
                                class="form__label"
                                for="Variants-{{ section.id }}"
                              >
                                {{- 'products.product.product_variants' | t -}}
                              </label>
                              <div class="select">
                                <select
                                  name="id"
                                  id="Variants-{{ section.id }}"
                                  class="select__select"
