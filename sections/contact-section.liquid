{% if section.blocks.size > 0 %}
  {{ "contact-section.css" | asset_url | stylesheet_tag }}

  <style>
    {% if section.settings.bg_color %}
      .contact-section {
        background-color: {{ section.settings.bg_color }};
      }
    {% endif %}
    {% if section.settings.content_color %}
      .contact-section .text {
        color: {{ section.settings.content_color }};
      }
      .contact-section .icon-wrap path {
        fill: {{ section.settings.content_color }};
      }
    {% endif %}
  </style>

  <div class="contact-section" id="{{ section.id }}">
    <div class="page-width">
      <div class="contact-grid content__alignment--{{ section.settings.contents_position }}">
        {% for block in section.blocks %}
          {% if block.settings.text != blank %}
            <div class="contact-item">
              <a href="{{ block.settings.link }}" class="contact-link">
                <div class="icon-wrap">
                  {%- case block.settings.icon-%}
                    {% when "phone" %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" viewBox="0 0 17 16" fill="none">
