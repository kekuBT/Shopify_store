                      </svg>
                    {% when "inbox" %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" viewBox="0 0 17 16" fill="none">
                        <path d="M2.4987 2H14.4987C14.6755 2 14.8451 2.07024 14.9701 2.19526C15.0951 2.32029 15.1654 2.48986 15.1654 2.66667V13.3333C15.1654 13.5101 15.0951 13.6797 14.9701 13.8047C14.8451 13.9298 14.6755 14 14.4987 14H2.4987C2.32189 14 2.15232 13.9298 2.02729 13.8047C1.90227 13.6797 1.83203 13.5101 1.83203 13.3333V2.66667C1.83203 2.48986 1.90227 2.32029 2.02729 2.19526C2.15232 2.07024 2.32189 2 2.4987 2ZM8.5387 7.78867L4.26403 4.15867L3.4007 5.17467L8.54736 9.54467L13.6014 5.17133L12.7294 4.16267L8.53936 7.78867H8.5387Z" fill="white"/>
                      </svg>
                    {% when "chat" %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                        <path d="M1.33399 5.99601C1.33363 5.47081 1.43689 4.9507 1.63783 4.46546C1.83877 3.98023 2.13346 3.53939 2.50502 3.16821C2.87657 2.79702 3.3177 2.50278 3.80314 2.30232C4.28858 2.10186 4.80879 1.99913 5.33399 2.00001H10.6673C12.876 2.00001 14.6673 3.79667 14.6673 5.99601V14H5.33399C3.12532 14 1.33399 12.2033 1.33399 10.004V5.99601ZM9.33399 7.33334V8.66667H10.6673V7.33334H9.33399ZM5.33399 7.33334V8.66667H6.66732V7.33334H5.33399Z" fill="white"/>
                      </svg>
                    {% when "help" %}
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
                        <path d="M8.00065 14.6667C4.31865 14.6667 1.33398 11.682 1.33398 8.00001C1.33398 4.31801 4.31865 1.33334 8.00065 1.33334C11.6827 1.33334 14.6673 4.31801 14.6673 8.00001C14.6673 11.682 11.6827 14.6667 8.00065 14.6667ZM7.33398 10V11.3333H8.66732V10H7.33398ZM8.66732 8.90334C9.2031 8.74186 9.66306 8.39331 9.96342 7.92117C10.2638 7.44903 10.3846 6.88471 10.3038 6.33099C10.223 5.77726 9.94606 5.27097 9.52333 4.90431C9.1006 4.53766 8.56023 4.33504 8.00065 4.33334C7.46122 4.3333 6.93843 4.52011 6.52118 4.86201C6.10393 5.2039 5.81799 5.67976 5.71198 6.20868L7.01998 6.47068C7.0571 6.28497 7.1462 6.11361 7.2769 5.97655C7.40759 5.8395 7.57453 5.74237 7.75827 5.69648C7.94201 5.65059 8.135 5.65782 8.3148 5.71732C8.49459 5.77683 8.65379 5.88617 8.77387 6.03262C8.89395 6.17907 8.96998 6.3566 8.99311 6.54457C9.01623 6.73254 8.9855 6.92321 8.9045 7.0944C8.82349 7.26559 8.69554 7.41025 8.53553 7.51156C8.37553 7.61287 8.19004 7.66667 8.00065 7.66668C7.82384 7.66668 7.65427 7.73692 7.52925 7.86194C7.40422 7.98696 7.33398 8.15653 7.33398 8.33334V9.33334H8.66732V8.90334Z" fill="white"/>
                      </svg>
                  {%- endcase -%}
                </div>
                <span class="text">{{ block.settings.text }}</span>
              </a>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "t:sections.contact-section.name",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "t:sections.contact-section.settings.bg_color.label"
    },
    {
      "type": "color",
      "id": "content_color",
      "label": "t:sections.contact-section.settings.content_color.label"
    },
    {
      "type": "select",
      "id": "contents_position",
      "label": "t:sections.contact-section.settings.contents_position.label",
      "options": [
        {
          "value": "left",
          "label": "t:sections.contact-section.settings.contents_position.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.contact-section.settings.contents_position.options__2.label"
        },
        {
          "value": "right",
          "label": "t:sections.contact-section.settings.contents_position.options__3.label"
        }
      ],
      "default": "left"
    }
  ],
  "blocks": [
    {
      "name": "t:sections.contact-section.blocks.contact.name",
      "type": "contact",
      "limit": 4,
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "t:sections.contact-section.blocks.contact.settings.icon.label",
          "options": [
            {
              "value": "phone",
              "label": "t:sections.contact-section.blocks.contact.settings.icon.options__1.label"
            },
            {
              "value": "inbox",
              "label": "t:sections.contact-section.blocks.contact.settings.icon.options__2.label"
            },
            {
              "value": "chat",
              "label": "t:sections.contact-section.blocks.contact.settings.icon.options__3.label"
            },
            {
              "value": "help",
              "label": "t:sections.contact-section.blocks.contact.settings.icon.options__4.label"
            }
          ]
        },
        {
          "type": "text",
          "id": "text",
          "label": "t:sections.contact-section.blocks.contact.settings.text.label",
          "info": "t:sections.contact-section.blocks.contact.settings.text.info"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.contact-section.blocks.contact.settings.link.label"
        }
      ]
    }
  ]
}
{% endschema %}